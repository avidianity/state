{
    "name": "@avidian/state",
    "version": "1.3.2",
    "private": false,
    "description": "Library for handling state in LocalStorage or AsyncStorage.",
    "types": "types/index.d.ts",
    "main": "lib/index.js",
    "scripts": {
        "clean": "rm -rf dist && rm -rf types",
        "test": "jest --coverage",
        "type-check": "tsc --noEmit",
        "type-check:watch": "npm run type-check -- --watch",
        "build": "npm run clean && npm run build:types && npm run build:js",
        "build:types": "tsc --emitDeclarationOnly",
        "build:js": "babel src --out-dir lib --extensions \".ts,.tsx\" --source-maps inline"
    },
    "keywords": [
        "storage",
        "local storage",
        "async storage",
        "state"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/avidianity/state"
    },
    "author": "John Michael Manlupig",
    "license": "MIT",
    "homepage": "https://github.com/avidianity/state#readme",
    "devDependencies": {
        "@babel/cli": "^7.14.5",
        "@babel/core": "^7.14.6",
        "@babel/plugin-proposal-class-properties": "^7.14.5",
        "@babel/preset-env": "^7.14.7",
        "@babel/preset-typescript": "^7.14.5",
        "@types/browser-or-node": "^1.3.0",
        "@types/core-js": "^2.5.5",
        "@types/jest": "^27.0.2",
        "@types/node": "^16.3.0",
        "@types/regenerator-runtime": "^0.13.1",
        "jest": "^27.2.5",
        "jest-badges": "^0.1.3",
        "typescript": "^4.3.5"
    },
    "dependencies": {
        "@avidian/events": "^1.0.2",
        "browser-or-node": "^1.3.0",
        "core-js": "^3.18.0",
        "regenerator-runtime": "^0.13.9"
    }
}
